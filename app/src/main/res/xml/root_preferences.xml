<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/HelpInfo_title"
        app:summary="@string/HelpInfo_summary"
        app:iconSpaceReserved="false"/>

    <PreferenceCategory app:title="@string/safecenter_header"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="startup"
            app:title="@string/startup_title"
            app:summary="@string/startup_summary"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/launcher_header"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="app_lock"
            app:title="@string/app_lock_title"
            app:summary="@string/app_lock_summary"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/packageinstaller_header"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="safe_installer"
            app:title="@string/safe_installer_title"
            app:summary="@string/safe_installer_summary"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="installer_warn"
            app:title="@string/installer_warn_title"
            app:summary="@string/installer_warn_summary"
            app:defaultValue="false"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="installer_ads"
            app:title="@string/installer_ads_title"
            app:summary="@string/installer_ads_summary"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="aosp_installer"
            app:summaryOff="@string/aosp_installer_summary_off"
            app:summaryOn="@string/aosp_installer_summary_on"
            app:title="@string/aosp_installer_title"
            app:defaultValue="false"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/systemui_header"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="lock_red_one"
            app:title="@string/lock_red_one_title"
            app:summary="@string/lock_red_one_summary"
            app:defaultValue="false"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/gamespace_header"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="root_checker"
            app:title="@string/root_checker_title"
            app:summary="@string/root_checker_summary"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

</PreferenceScreen>